 public static void main(String[] args) {
        // 输入文件和输出文件路径
        String inputFilePath = "input.csv";
        String outputFilePath = "output.csv";

        // 创建输入流和输出流
        try (InputStream inputStream = new FileInputStream(inputFilePath);
             OutputStream outputStream = new FileOutputStream(outputFilePath);
             InputStreamReader reader = new InputStreamReader(inputStream, "UTF-8");
             OutputStreamWriter writer = new OutputStreamWriter(outputStream, "UTF-8")) {

            // 创建 CSVParser 对象并解析 CSV 数据
            CSVParser csvParser = CSVFormat.DEFAULT.parse(reader);
            // 创建 CSVPrinter 对象用于写出 CSV 数据
            CSVPrinter csvPrinter = new CSVPrinter(writer, CSVFormat.DEFAULT);

            // 遍历每条记录，并将处理后的数据写入到输出文件中
            for (CSVRecord record : csvParser) {
                // 在这里对 CSV 记录进行处理
                // 这里只是示例，实际操作根据需求来
                // 假设我们对每条记录的第一个字段进行处理，将其转换为大写
                String processedValue = record.get(0).toUpperCase();
                // 写入处理后的数据到输出文件中
                csvPrinter.printRecord(processedValue, record.get(1), record.get(2)); // 以此类推，根据实际列数添加参数
            }

            // 刷新 CSVPrinter 并关闭它
            csvPrinter.flush();
            csvPrinter.close();

            System.out.println("处理完成。");

        } catch (IOException e) {
            e.printStackTrace();
        }
    }
}
